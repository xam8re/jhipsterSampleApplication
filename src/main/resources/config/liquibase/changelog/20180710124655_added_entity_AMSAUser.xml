        <createTable tableName="amsa_user" remarks="gestiamo i Ruoli in JHipseter assegneremo gli utenti JHipster 1:1 ai record AMSAUser">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
